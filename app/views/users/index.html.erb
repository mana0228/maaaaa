<h3>ユーザー一覧ページ</h3>
<br>
<% if user_signed_in? %>
    <h5>こんにちは <%= current_user.email %></h5>
    <% @users.each do |u| %>
        <%= render :partial => "relationships/follow_button", :locals => { user: u } %>
    <p><a href="/users/<%= u.id %>"><%= u.email %>さん</a></p>
    <hr>
    <% end %>
    <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to "ユーザーを登録する", new_user_registration_path %>
    <br>
    <%= link_to "ログインする", new_user_session_path %>
<% end %>